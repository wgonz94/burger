{{!-- Routes data by value of devoured or not devoured --}}

<header>
    <div class="row">
        <div align="center" class="col-sm-12">
            <h1>Devour the Burger!</h1>
            <hr>
        </div>
    </div>
</header>
<div class="center">
    <div class="row">
        <div class="col-sm-4">
            <h2 align="center">Burgers Created</h2>
            <ul align="center">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div align="center" class="col-sm-4"><br><br>

           <img src="https://www.designindaba.com/sites/default/files/styles/scaledlarge/public/node/news/23566/sonic-burger.jpg?itok=zGk5pjcI" alt="burger_img" width="400px" height="400px">
        </div>

        <div class="col-sm-4">
            <h2 align="center">Burgers Devoured</h2>
            <ul align="center">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
<br><br>

{{!-- Burger creation outline/button --}}
<div align="center" class="row">
    <div class="col-sm-12">

        <h2>Create a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="burger_name">
            </div>

            <button id="submit" type="submit">Create Burger</button>
        </form>
    </div>
</div>